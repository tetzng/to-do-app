<%= render 'layouts/flash_messages' %>

<h1>タスクの一覧</h1>
<%= link_to "新規作成", new_task_path %>
<% @tasks.each do |task| %>
  <div>
    <h2><%= link_to task.name, task_path(task) %></h2>
    <p><%= link_to task.description, task_path(task) %></p>
    <p><%= link_to "編集", edit_task_path(task) %></p>
    <p><%= link_to "削除", task_path(task), method: :delete %></p>
  </div>
<% end %>

